{
    "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
    "compilerOptions": {
      "module": "ESNext", 
      "moduleResolution": "Node",
      "target": "ESNext",
      "strict": true,
      "jsx": "preserve",
      "allowJs": true,
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true
    }
  }